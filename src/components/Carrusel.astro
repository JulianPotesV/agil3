<!-- Swiper CSS desde CDN -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

<section class="testimonials-section">
  <div class="swiper mySwiper">
    
    <!--Testimonio 1 -->
    <div class="swiper-wrapper">
