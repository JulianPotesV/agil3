---
interface Props {
  title: string;
  description: string;
  images?: string[];
  align?: 'left' | 'center';
}

const { 
  title, 
  description, 
  images = [],
  align = 'left'
} = Astro.props;

const alignClass = align === 'center' ? 'text-center' : 'text-left';
---

<div class={`relative w-full bg-gradient-to-b from-orange-300 to-naranja overflow-hidden pt-24 sm:pt-8 pb-16 `}>
  <div class="container mx-auto px-6 py-6 md:py-24">
    <div class="fade-slide-up flex flex-col lg:flex-row md:flex-col items-center justify-between gap-8">

      <!-- Contenido de texto -->
      <div class={`w-full  md:w-1/1 ${alignClass}`}>

        <!-- Titulo -->
        <h1 class="text-5xl lg:text-left md:text-center text-center md:text-6xl font-medium text-white mb-6 leading-tight">
          {title}
        </h1>

        <!-- Parrafo -->
        <p class="md:text-xl text-lg text-white lg:text-left md:text-center text-center leading-relaxed lg:max-w-3xl">
          {description}
        </p>

        <slot name="actions" />
      </div>

      <!-- Imágenes circulares -->
      {images.length > 0 && (
        <div class="relative w-full md:w-1/2 h-64 md:h-80 flex items-center justify-center">
          <!-- Círculo decorativo 1 -->
          <div class="absolute top-8 right-10 w-4 h-4 bg-white rounded-full"></div>
          
          <!-- Círculo decorativo 2 -->
          <div class="absolute bottom-12 left-10 w-3 h-3 bg-white rounded-full"></div>
          
          <!-- Círculo decorativo 3 -->
          <div class="absolute bottom-8 right-1/4 w-2 h-2 bg-white rounded-full"></div>

          <!-- Imágenes principales -->
          <div class="relative w-full h-full flex items-center justify-center gap-4">
            {images.map((image, index) => (
              <div 
                  class={`relative flex-shrink-0 ${
                    index === 0 
                      ? 'w-48 h-48 md:w-56 md:h-56 z-10' 
                      : index === 1 
                        ? 'w-40 h-40 md:w-48 md:h-48 -ml-8 md:-ml-12 z-0 mt-32'   /* Círculo del medio más abajo */
                        : 'w-40 h-40 md:w-48 md:h-48 -ml-8 md:-ml-12 z-0'
                  }`}
                >
                <img
                  src={image}
                  alt={`Image ${index + 1}`}
                  class="w-full h-full object-cover rounded-full shadow-xl"
                />
              </div>
            ))}
          </div>
        </div>
      )}
    </div>

    <!-- Curva circular -->
    <svg class="absolute bottom-0 left-0 w-full" viewBox="0 0 1440 220">
      <path
        fill="#ffffff"
        fill-opacity="1"
        d="M0,96L120,128C240,160,480,224,720,218.7C960,213,1200,139,1320,101.3L1440,64L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z"
      ></path>
		</svg>
  </div>  
</div>

<style>
  @keyframes fadeSlideUp {
  0% {
    opacity: 0;
    transform: translateY(40px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-slide-up {
  opacity: 0;
  animation: fadeSlideUp 1s ease-out forwards;
}

</style>