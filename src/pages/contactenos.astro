---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import contactenosImagen from "/src/assets/contactenos/contactenos-imagen-1.png";
---

<Layout>
  <div
    class="flex flex-col items-center bg-gradient-to-b from-orange-300 to-naranja pt-40 text-center space-y-8 text-white px-8"
  >
    <h1 class="fade-slide-up md:text-5xl text-4xl  font-medium">Estamos listos para ayudarte a crecer</h1>

    <p class="fade-slide-up md:text-2xl text-lg lg:max-w-[50%]  md:max-w-[80%] max-w-[80%] ">
      Cuéntanos sobre los retos y objetivos de tu empresa. Nuestro equipo está
      listo para asesorarte y construir juntos la solución tecnológica que
      impulse tu crecimiento.
    </p>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120">
    <path
      fill="#FF6800"
      fill-opacity="1"
      d="M0,64L120,74.7C240,85,480,107,720,106.7C960,107,1200,85,1320,74.7L1440,64L1440,0L1320,0C1200,0,960,0,720,0C480,0,240,0,120,0L0,0Z"
    ></path>
  </svg>

  <section
    class="flex lg:flex-row flex-col items-center justify-center gap-16 px-4 pt-16 pb-24 mx-auto max-w-7xl"
  >
    <!-- Imagen -->
    <div class="relative lg:w-1/2 w-full flex justify-center">
      <Image
        src={contactenosImagen}
        alt="Imagen de características"
        class="w-full max-w-md lg:max-w-full"
      />
    </div>

    <!-- Formulario -->
    <div class="w-full lg:w-1/2">
      <form class="space-y-4 w-full" id="contactForm">
        <!-- Nombre -->
        <input
          type="text"
          name="nombre"
          placeholder="Nombre"
          required
          class="w-full px-6 py-4 bg-[#E8E8E8] rounded-2xl text-gray-700 placeholder-gray-500
               focus:outline-none focus:ring-2 focus:ring-orange-500 focus:bg-white transition-all"
        />

        <!-- Email -->
        <input
          type="email"
          name="email"
          placeholder="Email"
          required
          class="w-full px-6 py-4 bg-[#E8E8E8] rounded-2xl text-gray-700 placeholder-gray-500
               focus:outline-none focus:ring-2 focus:ring-orange-500 focus:bg-white transition-all"
        />

        <!-- Celular y Empresa -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input
            type="tel"
            name="celular"
            placeholder="Celular"
            required
            class="w-full px-6 py-4 bg-[#E8E8E8] rounded-2xl text-gray-700 placeholder-gray-500
                 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:bg-white transition-all"
          />

          <input
            type="text"
            name="empresa"
            placeholder="Empresa"
            class="w-full px-6 py-4 bg-[#E8E8E8] rounded-2xl text-gray-700 placeholder-gray-500
                 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:bg-white transition-all"
          />
        </div>

        <!-- Mensaje -->
        <textarea
          name="mensaje"
          placeholder="Mensaje"
          rows="4"
          required
          class="w-full px-6 py-4 bg-[#E8E8E8] rounded-2xl text-gray-700 placeholder-gray-500
               focus:outline-none focus:ring-2 focus:ring-orange-500 focus:bg-white transition-all resize-none"
        ></textarea>

        <!-- reCAPTCHA -->
        <div class="flex justify-start">
          <div class="g-recaptcha" data-sitekey="TU_SITE_KEY_AQUI"></div>
        </div>

        <!-- Botón -->
        <button
          type="submit"
          class="w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-4 rounded-2xl
               transition-all duration-300 transform hover:scale-[1.02] active:scale-[0.98]
               shadow-lg hover:shadow-xl"
        >
          Enviar
        </button>
      </form>

      <!-- Mensaje -->
      <div id="formMessage" class="mt-6 hidden">
        <div class="p-4 rounded-lg text-center font-medium"></div>
      </div>
    </div>
  </section>

  <div class="h-24 bg-gradient-to-b from-white to-[#FFD9BF]"></div>
</Layout>

<style>
  @keyframes fadeSlideUp {
  0% {
    opacity: 0;
    transform: translateY(40px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-slide-up {
  opacity: 0;
  animation: fadeSlideUp 1s ease-out forwards;
}
</style>
